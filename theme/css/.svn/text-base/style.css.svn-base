body
{
    width: 100%;
    font-family: "Helvetica Neue", Helvetica, Arial, sans-serif;
    line-height: 18px;
    background-color: #F8F8F8;
    color: #515653;

}
#body-wrapper
{

}


/* 1. HEADER */
#header
{
    width: 100%;
    height: 50px;
    background-color: #444;
    box-shadow: 0 0 3px 4px #222222;
    color: #FFF;
    z-index: 1000;
    margin: 0 0 5px 0;
}
#header-content
{
    margin: auto;
    width: 960px;
    height: 50px;
}
#header #site-name
{
    float: left;
    font-size: 25px;
    padding: 18px 0 0 0;
}
#header #navbar
{
    float: right;
}
#header #navbar-ul
{
    margin: 21px 0 0 0;
}
#header #navbar-ul li
{
    display: block;
    float: left;
    font-size: 16px;
    padding: 5px 12px;
    margin: 0 2px;
    border: 1px solid #999;
    border-bottom: none;
    border-radius: 4px 4px 0 0;
}


/* 2. MAIN SECTION */
#main-wrapper
{
    background-color: #DDD;
    min-height: 400px;
}
#main
{
    padding: 10px 50px;
    width: 1024px;
    margin: auto;
}
#main .section
{
    outline: 1px dotted #666;
    min-height: 480px;
}
#main-left
{
    width: 150px;
    float: left;
}
#content
{
    border-left: 1px solid #444;
    border-right: 1px solid #444;
    float: left;
    width: 720px;
}
#main-right
{
    width: 150px;
    float: left;
}

/* 3. FOOTER */
#footer
{
    width: 100%;
    height: 70px;
    background-color: #444;
    color: #FFF;
}

/* Login Form */
#login-form-wrapper
{
    width: 450px;
    margin: 50px auto 10px;
}