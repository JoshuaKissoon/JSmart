<?xml version="1.0" encoding="UTF-8"?>
<config>
    
    <information>
        <title>Example Module</title>
        <description>An example module demonstrating how to create a simple module</description>
    </information>
    
    <permissions>
        <permission>
            <perm>view_example_module</perm>
            <title>View Example Module</title>
        </permission>
        <permission>
            <perm>use_example_module</perm>
            <title>Use Example Module</title>
        </permission>
    </permissions>
    
    <urls>
        <url>
            <link>example</link>
            <permission>view_example_module</permission>
        </url>
        <url>
            <link>module-example</link>
            <permission>view_example_module</permission>
        </url>
        <url>
            <link>example/use</link>
            <permission>use_example_module</permission>
        </url>
    </urls>
</config>